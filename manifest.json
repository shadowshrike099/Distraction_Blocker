{
  "manifest_version": 3,
  "name": "Cognitive Defense",
  "version": "1.0",
  "description": "A cybersecurity-focused productivity extension for focus management and behavioral monitoring.",
  "permissions": [
    "storage",
    "alarms",
    "activeTab",
    "scripting",
    "declarativeNetRequest",
    "webNavigation",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Cognitive Defense"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.tiktok.com/*",
        "*://*.instagram.com/*"
      ],
      "js": [
        "config.js",
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.tiktok.com/*",
        "*://*.youtube.com/*",
        "*://*.x.com/*",
        "*://*.twitter.com/*",
        "*://*.reddit.com/*",
        "*://*.netflix.com/*"
      ],
      "js": [
        "config.js",
        "content/guardian.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content/securityScanner.js"],
      "css": ["content/threatOverlay.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "content/threatOverlay.css",
      "data/*.json"
    ],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
